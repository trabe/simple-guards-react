{
  "parser": "babel-eslint",

  "plugins": [
  ],

  "env": {
    "browser": true,
    "es6": true
  },

  "settings": {
    "ecmascript": 6
  },

  "rules": {
    "semi": [2, "always"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": [2, {"properties": "always"}],
    "comma-dangle": 2,
    "eqeqeq": 2,
    "indent": [2, 2, {"SwitchCase": 1}],
    "new-cap": 2,
    "no-cond-assign": 2,
    "no-console": 1,
    "no-debugger": 1,
    "no-irregular-whitespace": 2,
    "no-sparse-arrays": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 2,
    "no-unreachable": 2,
    "quotes": 2,
    "radix": 2,
    "keyword-spacing": 2,
    "object-curly-spacing":[2, "always"],
    "array-bracket-spacing":[2, "always"],
    "computed-property-spacing":[2, "never"],
    "space-in-parens":[2, "never"],
    "strict": [2, "global"]
  },

  "ecmaFeatures": {
    "modules": true,
    "blockBindings": true,
    "arrowFunctions": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "templateString": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true
  }
}


